{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",

  "name": "${name}",
  "description": "A tiny Minecraft network library for my fabric mods",
  "authors": [
    "Fallen_Breath"
  ],
  "contact": {
    "homepage": "https://github.com/Fallen-Breath/fanetlib",
    "sources": "https://github.com/Fallen-Breath/fanetlib"
  },

  "icon": "assets/fanetlib/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.fallenbreath.fanetlib.FanetlibMod"
    ]
  },
  "mixins": [
    "fanetlib.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.25",
    "minecraft": "${minecraft_dependency}"
  },

  "custom": {
    "modmenu:api": true,
    "modmenu": {
      "badges": [
        "library"
      ]
    }
  }
}
